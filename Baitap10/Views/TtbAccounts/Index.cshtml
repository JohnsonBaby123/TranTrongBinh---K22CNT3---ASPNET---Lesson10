@model IEnumerable<Baitap10.Models.BstAccount>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_BstLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BstUerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BstPassword)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BstFullName)
        </th>
