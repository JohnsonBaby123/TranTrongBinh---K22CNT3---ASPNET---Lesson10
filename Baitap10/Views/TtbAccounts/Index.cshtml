            @Html.DisplayFor(modelItem => item.BstEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BstPhone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BstActive)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
